<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#D0DD97"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/header_logo" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="430dp"
            android:layout_height="81dp"
            app:srcCompat="@drawable/header_logo" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:fillViewport="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="662dp">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TextViewASDFsdfsadfsadfasfsafsafasfasfsafasdfasdfasdfasdfasdfsadfasfasdfasfdasdfasd
                            fafasfsadfasdfas
                            fasfdsafasdf
                            asdfsafasdf\nsadfasdfsdf\nasdfasdf\nsdfsdf\nasdfasdfsa\nsdfasfsad\nasffas\nsasdfa
                            \nasdfga\nasdf\nasfd\nasdfg\nadfg\nafg\nasdfgan\nsadfsgasfgaasdf
                            \n이상향 적는곳, 배너는 viewpager라는외부라이브러리 써야하는것같아서 아직안함(슬라이드되는거)" />

            </FrameLayout>



            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="110dp"></androidx.viewpager.widget.ViewPager>


            <Button
                android:id="@+id/Button1"
                android:layout_width="325dp"
                android:layout_height="200dp"
                android:onClick="toMarket1"
                android:orientation="vertical"
                android:text="반찬가게1" />

            <Button
                android:id="@+id/Button2"
                android:layout_width="325dp"
                android:layout_height="200dp"
                android:onClick="toMarket2"
                android:orientation="vertical"
                android:text="반찬가게2" />

            <Button
                android:id="@+id/Button3"
                android:layout_width="325dp"
                android:layout_height="200dp"
                android:onClick="toMarket3"
                android:orientation="vertical"
                android:text="반찬가게3" />

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_launcher_background"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="48dp"

        >

        <Button
            android:id="@+id/btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/background_light"

            android:onClick="sendMessage"
            android:text="홈"
            />
            android:onClick="toHome"
            android:text="홈" />
        <Button
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:drawableTop="@drawable/botton_main_shopping_cart"
            android:text="장바구니"
            />
        <Button
            android:id="@+id/btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:drawableTop="@drawable/botton_main_notifications"
            android:text="알림"
            />
        <Button
            android:id="@+id/btn_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:drawableTop="@drawable/botton_main_myinfo"
            android:text="내정보"
            />
    </LinearLayout>
</LinearLayout>