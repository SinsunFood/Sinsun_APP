<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SendData">

    <EditText
        android:id="@+id/et_data1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="data1"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_data2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="data2"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_data1"
        app:layout_constraintStart_toStartOf="@+id/et_data1"
        app:layout_constraintTop_toBottomOf="@+id/et_data1" />


    <Button
        android:id="@+id/btn_register_data"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="데이터등록"
        app:layout_constraintEnd_toEndOf="@+id/et_data2"
        app:layout_constraintStart_toStartOf="@+id/et_data2"
        app:layout_constraintTop_toBottomOf="@+id/et_data2" />
</LinearLayout>